<html>
<head>
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts.js"></script>
</head>
<body>
	<table width="100%" border="0" style="table-layout:fixed;"> <tr>
		<td valign="top" style="text-align:left;"> <a href="/"> Powrót </a> </td>
		<td style="text-align:center;"> <h1> Pokoje </h1> </td>
		<td></td>
	</tr> </table>
<button class="przycisk" id="create_room_button" onclick = "createRoom()"> <t> Stwórz pokóy </t></button>
	<div align="center">
	<table>
	<% for (var i = 0; i < rooms.length; i++)
	{ %>
		<tr>
		<td> <%= i+1 %> </td>
		<td> <%= rooms[i].name %> </td>
		<td>
		<% if (rooms[i].playersCnt < 6) { %>
			<a href="rooms/<%= i %>" > Dołącz </a>
		<% } %>
		</td>
		<td> Liczba graczy: <%= rooms[i].playersCnt %> </td>

		</tr>
	<% } %>
	</table>
	</div>


</body>
</html>
